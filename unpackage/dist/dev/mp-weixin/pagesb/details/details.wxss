/* 商品详情 */
.productDetail{
	background: #FFFFFF;
	width: 100%;
}
.productDetailTitle{
	height: 80rpx;
	padding: 0rpx 20rpx;
	line-height: 80rpx;
}

/* 商品评价 */
.productEval{
	width: 750rpx;
	height:auto;
	background:#fff;
	margin-top:20rpx;
	padding:0rpx 20rpx;
	margin-bottom:100rpx;
}
.eval{
	height:90rpx;
	border-bottom:1px solid #F1F1F1;
	line-height:90rpx;
}
.evalUsername{
	display:block;
	margin-top:10rpx;
	font-size:28rpx;
	color:#ccc;
}
.evalUsertitle{
	display:block;
	margin:20rpx 0rpx;
	font-size:30rpx;
}
.evalImage{
	display:-webkit-box;
	display:-webkit-flex;
	display:flex;
	-webkit-flex-wrap:wrap;
	        flex-wrap:wrap;
}
.evalImage image{
	width:136rpx;
	height:136rpx;
	margin:4rpx;
}
.evalTime{
	display:block;
	margin:20rpx 0rpx;
	font-size:28rpx;
	color:#ccc;
}

