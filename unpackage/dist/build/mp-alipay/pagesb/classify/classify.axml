<view class="container"><scroll-view class="left" scroll-y="{{true}}"><view data-event-opts="{{[['tap',[['_switchTab',[index]]]]]}}" class="{{(('left_list')+' '+(activeIndex==index?'activeList':''))}}" onTap="__e" a:for="{{cate}}" a:for-item="item" a:for-index="index" a:key="index"><label for>{{item.catename}}</label></view></scroll-view><scroll-view class="right" scroll-y="{{true}}"><view class="row"><view data-event-opts="{{[['tap',[['_goCateList',['$0'],[[['sonCate','',index,'id']]]]]]]}}" class="row_list" onTap="__e" a:for="{{sonCate}}" a:for-item="item" a:for-index="index" a:key="index"><image src="{{item.img}}" mode="widthFix"></image><text>{{item.catename}}</text></view></view></scroll-view></view>